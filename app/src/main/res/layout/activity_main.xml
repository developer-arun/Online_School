<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textColor="#0DECAD"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/login_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="108dp"
        android:fontFamily="sans-serif"
        android:text="LOGIN"
        android:textColor="@color/light_green"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/user_email_login"
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="88dp"
        android:layout_marginBottom="435dp"
        android:ems="15"
        android:hint="enter your email id"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/user_passwd_login"
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="83dp"
        android:layout_marginBottom="317dp"
        android:ems="10"
        android:hint="enter your password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/login_btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="80dp"
        android:layout_marginBottom="165dp"
        android:background="@drawable/custom_btn_green"
        android:text="LOGIN"
        android:textColor="#001D7E" />

    <Button
        android:id="@+id/signup_btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="165dp"
        android:background="@drawable/custom_btn_green"
        android:text="sign up"
        android:textColor="#001D7E" />

</RelativeLayout>
